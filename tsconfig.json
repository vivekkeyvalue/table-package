{
    "compilerOptions": {
      "noImplicitAny": true,
      "outDir": "build/types",
      "module": "esnext",
      "target": "es5",
      "allowJs": true,
      "sourceMap": true,
      "declaration": true,
      "emitDeclarationOnly": true,
      "allowSyntheticDefaultImports": true,
      "lib": ["es2018", "dom"],
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "include": ["src/lib/**/*.tsx", "src/lib/**/*.ts"],
    "exclude": ["src/lib/**/tests", "node_modules"]
}